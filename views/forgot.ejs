    <link rel="stylesheet" href="/style/style.css" /> 
    <link rel="stylesheet" href="/style/forgot.css" />
    <title>Book Store</title>
  </head>
  <body>
    <div class="container">
        <%- include('../partials/navbar.ejs') %>

        <center>
          <div class="form-container">

            <h1>Forgot Password</h1>
            <form action="/forgot" method="post" >
                <input type="email" placeholder="Enter Your Email" name="Forgotemail" id="Forgot-email-input">
                <input type="password" placeholder="Enter New Password" name="Forgotpassword1" id="Forgot-password-input">
                 <input type="password" placeholder="Re-Enter New Password" name="Forgotpassword2" id="Forgot-password-input">
                <button class="login-btn" type="submit">Submit</button>
            </form>
          </div>
        </center>
     

      <hr class="footer-hr" />
      <%- include('../partials/footer.ejs') %>
    </div>
  </body>
  <script src="/src/login-forgot-singup.js"></script>
</html>
